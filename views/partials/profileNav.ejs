<style>
    .offcanvas {
        width: 400px;
        height: 100%;
    }
    
    @media(max-width: 550px) {
        .offcanvas {
            width: 300px;
        }
    }
    
    @media(max-width: 400px) {
        .offcanvas {
            width: 200px;
        }
    }
</style>

<div class="offcanvas offcanvas-start" id="profile">
    <div class="d-flex flex-column flex-shrink-0 text-white p-3 bg-dark" style="width: 100%; height: 100%;">
        <div class="offcanvas-header">
            <span class="fs-4 offcanvas-title">YelpCamp</span>

        </div>
        <hr>

        <div class="offcanvas-body">
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a href="/" class="nav-link text-white" aria-current="page">
                   Home
                </a>
                </li>
                <li>
                    <a href="/profile/<%=currentUser.username%>/campgrounds" class="nav-link <%= check?(check===1?'active':''):'' %>   text-white">
                   Your Campgrounds
              </a>
                </li>
                <li>
                    <a href="/campgrounds" class="nav-link  <%= check===0?'active':'' %>  text-white">
                    All Campgrounds
                </a>
                </li>

                <!-- <li>
                    <a href="#" class="nav-link  text-white">
                 Campgrounds
            </a>
                </li>
                <li>
                    <a href="#" class="nav-link  text-white">
               Campgrounds
          </a>
                </li> -->

            </ul>
        </div>
        <hr>
        <div class="dropdown">
            <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                <img src="https://github.com/mdo.png" alt="" width="32" height="32" class="rounded-circle me-2">
                <strong><%=currentUser.username%> </strong>
            </a>
            <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                <li><a class="dropdown-item" href="/campgrounds/new">New Campground</a></li>
                <li><a class="dropdown-item" href="#">Settings</a></li>
                <li><a class="dropdown-item" href="#">Profile</a></li>
                <li>
                    <hr class="dropdown-divider">
                </li>
                <li><a class="dropdown-item" href="/logout">Sign out</a></li>
            </ul>
        </div>

    </div>
</div>